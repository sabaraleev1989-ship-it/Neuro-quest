    <script>
        // --- –ù–ê–°–¢–†–û–ô–ö–ò TELEGRAM ---
        const TG_TOKEN = "–í–°–¢–ê–í–¨_–°–Æ–î–ê_–¢–û–ö–ï–ù"; 
        const TG_CHAT_ID = "–í–°–¢–ê–í–¨_–°–Æ–î–ê_ID";

        function toggleChat() {
            const win = document.getElementById('chat-window');
            win.style.display = win.style.display === 'flex' ? 'none' : 'flex';
        }

        async function sendMsg() {
            const input = document.getElementById('user-input');
            const box = document.getElementById('chat-msgs');
            const text = input.value.trim();

            if(!text) return;

            // –î–æ–±–∞–≤–ª—è–µ–º –≤ —á–∞—Ç –Ω–∞ —Å–∞–π—Ç–µ
            box.innerHTML += `<div class="msg user">${text}</div>`;
            input.value = "";
            box.scrollTop = box.scrollHeight;

            // –û—Ç–ø—Ä–∞–≤–∫–∞ –≤ Telegram
            const api_url = `https://api.telegram.org/bot${TG_TOKEN}/sendMessage`;
            const message = `üöÄ –ù–æ–≤—ã–π –≤–æ–ø—Ä–æ—Å –∏–∑ Sport&Fashion:\n\n${text}`;

            try {
                await fetch(api_url, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ chat_id: TG_CHAT_ID, text: message })
                });
                
                setTimeout(() => {
                    box.innerHTML += `<div class="msg bot">–û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ! –ú–µ–Ω–µ–¥–∂–µ—Ä —Å–∫–æ—Ä–æ —Å–≤—è–∂–µ—Ç—Å—è —Å –≤–∞–º–∏.</div>`;
                    box.scrollTop = box.scrollHeight;
                }, 1000);
            } catch(e) {
                console.error("–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏", e);
            }
        }
    </script>

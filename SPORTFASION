    <script>
        // –¢–≤–æ–∏ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ Telegram
        const TG_TOKEN = "8342704083:AAEVz_T5MnAjskXUybYkDAb4zYK4cbiZ4aU"; 
        const TG_CHAT_ID = "772852915";

        function toggleChat() {
            const win = document.getElementById('chat-window');
            win.style.display = (win.style.display === 'flex') ? 'none' : 'flex';
        }

        async function sendMsg() {
            const input = document.getElementById('user-input');
            const box = document.getElementById('chat-msgs');
            const text = input.value.trim();

            if(!text) return;

            // 1. –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ —á–∞—Ç–µ –Ω–∞ —Å–∞–π—Ç–µ
            box.innerHTML += `<div class="msg user">${text}</div>`;
            input.value = "";
            box.scrollTop = box.scrollHeight;

            // 2. –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∑–∞–ø—Ä–æ—Å –≤ Telegram
            // –ú—ã –∏—Å–ø–æ–ª—å–∑—É–µ–º –º–µ—Ç–æ–¥ GET —á–µ—Ä–µ–∑ URL ‚Äî —ç—Ç–æ —Å–∞–º—ã–π –Ω–∞–¥–µ–∂–Ω—ã–π —Å–ø–æ—Å–æ–± –¥–ª—è –ø—Ä–æ—Å—Ç—ã—Ö —Å–∞–π—Ç–æ–≤
            const url = `https://api.telegram.org/bot${TG_TOKEN}/sendMessage?chat_id=${TG_CHAT_ID}&text=${encodeURIComponent("üöÄ –ù–æ–≤—ã–π –≤–æ–ø—Ä–æ—Å —Å —Å–∞–π—Ç–∞:\n" + text)}`;

            try {
                const response = await fetch(url);
                if (response.ok) {
                    setTimeout(() => {
                        box.innerHTML += `<div class="msg bot">–°–æ–æ–±—â–µ–Ω–∏–µ –¥–æ—Å—Ç–∞–≤–ª–µ–Ω–æ –º–µ–Ω–µ–¥–∂–µ—Ä—É!</div>`;
                        box.scrollTop = box.scrollHeight;
                    }, 500);
                } else {
                    console.error("–û—à–∏–±–∫–∞ API Telegram");
                }
            } catch(e) {
                console.error("–û—à–∏–±–∫–∞ —Å–µ—Ç–∏", e);
            }
        }
    </script>

    <div id="chat-btn" onclick="toggleChat()">üí¨</div>

    <div class="chat-box" id="chat-box">
        <div class="chat-head">–ü–û–î–î–ï–†–ñ–ö–ê <span onclick="toggleChat()" style="cursor:pointer">√ó</span></div>
        <div class="chat-msgs" id="msgs">
            <div class="msg bot">–ù–∞–ø–∏—à–∏—Ç–µ –Ω–∞–º! –°–æ–æ–±—â–µ–Ω–∏–µ –ø—Ä–∏–¥–µ—Ç –≤ Telegram.</div>
        </div>
        <div class="chat-input">
            <input type="text" id="uin" placeholder="–í–∞—à –≤–æ–ø—Ä–æ—Å...">
            <button onclick="send()">–û–¢–ü–†.</button>
        </div>
    </div>

    <script>
        const T = "8342704083:AAEVz_T5MnAjskXUybYkDAb4zYK4cbiZ4aU";
        const C = "772852915";

        function toggleChat() {
            const b = document.getElementById('chat-box');
            b.style.display = b.style.display === 'flex' ? 'none' : 'flex';
        }

        function send() {
            const i = document.getElementById('uin');
            const m = document.getElementById('msgs');
            const val = i.value.trim();
            if(!val) return;

            m.innerHTML += `<div class="msg user">${val}</div>`;
            i.value = "";

            // –û–¢–ü–†–ê–í–ö–ê
            fetch(`https://api.telegram.org/bot${T}/sendMessage?chat_id=${C}&text=${encodeURIComponent(val)}`)
            .then(res => {
                if(res.ok) {
                    m.innerHTML += `<div class="msg bot">‚úÖ –î–æ—Å—Ç–∞–≤–ª–µ–Ω–æ!</div>`;
                } else {
                    m.innerHTML += `<div class="msg bot" style="color:yellow">‚ùå –û—à–∏–±–∫–∞: –ë–æ—Ç –Ω–µ –∑–∞–ø—É—â–µ–Ω –∏–ª–∏ ID –Ω–µ–≤–µ—Ä–Ω—ã–π. –ù–∞–ø–∏—à–∏—Ç–µ –±–æ—Ç—É –≤ –ª–∏—á–∫—É –ø–µ—Ä–≤—ã–º!</div>`;
                }
            })
            .catch(e => {
                m.innerHTML += `<div class="msg bot" style="color:yellow">‚ùå –û—à–∏–±–∫–∞ —Å–µ—Ç–∏.</div>`;
            });
        }
    </script>

    <script>
        // –¢–í–û–ò –î–ê–ù–ù–´–ï (–£–ñ–ï –í–°–¢–ê–í–õ–ï–ù–´)
        const TOKEN = "8342704083:AAEVz_T5MnAjskXUybYkDAb4zYK4cbiZ4aU"; 
        const CHAT_ID = "772852915";

        // –§—É–Ω–∫—Ü–∏—è –æ—Ç–∫—Ä—ã—Ç–∏—è/–∑–∞–∫—Ä—ã—Ç–∏—è —á–∞—Ç–∞
        function toggleChat() {
            const chat = document.getElementById('chat-box');
            if (chat.style.display === 'flex') {
                chat.style.display = 'none';
            } else {
                chat.style.display = 'flex';
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –æ—Ç–ø—Ä–∞–≤–∫–∏
        function sendToTelegram() {
            const input = document.getElementById('user-in');
            const box = document.getElementById('chat-msgs');
            const message = input.value.trim();

            if (message === "") return;

            // 1. –†–∏—Å—É–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ —á–∞—Ç–µ
            box.innerHTML += `<div class="m user">${message}</div>`;
            box.scrollTop = box.scrollHeight; // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –≤–Ω–∏–∑
            input.value = ""; // –û—á–∏—Å—Ç–∫–∞ –ø–æ–ª—è

            // 2. –û–¢–ü–†–ê–í–ö–ê –í TELEGRAM (–ú–µ—Ç–æ–¥ —á–µ—Ä–µ–∑ –∫–∞—Ä—Ç–∏–Ω–∫—É - —Å–∞–º—ã–π –Ω–∞–¥–µ–∂–Ω—ã–π)
            const url = `https://api.telegram.org/bot${TOKEN}/sendMessage?chat_id=${CHAT_ID}&text=${encodeURIComponent("üöÄ –í–æ–ø—Ä–æ—Å —Å —Å–∞–π—Ç–∞: " + message)}`;
            
            const sender = new Image();
            sender.src = url;

            // 3. –û—Ç–≤–µ—Ç –±–æ—Ç–∞ –Ω–∞ —Å–∞–π—Ç–µ —á–µ—Ä–µ–∑ —Å–µ–∫—É–Ω–¥—É
            setTimeout(() => {
                box.innerHTML += `<div class="m bot">–°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ! –ú–µ–Ω–µ–¥–∂–µ—Ä –æ—Ç–≤–µ—Ç–∏—Ç –≤–∞–º –≤ –±–ª–∏–∂–∞–π—à–µ–µ –≤—Ä–µ–º—è.</div>`;
                box.scrollTop = box.scrollHeight;
            }, 1000);
        }
    </script>

